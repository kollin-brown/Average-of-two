#include <iostream>
#include <random>
using namespace std;

int main() {

    random_device device;
    default_random_engine gen(device());
    uniform_int_distribution<> dist(1, 100);

    // number is the random number generated by the computer.
   int number = dist(gen);
   int guess=0;
  cout<<number;


    cout<<"I'm thinking of a number.";
while(guess!=number){
      cout<<"What is your guess?";
      cin>>guess;
      int dif=number-guess;
      int x=abs(dif);
    if(x>=50){
        cout<<"Cold.";
        cout<<endl;
        }else if(x>=20&&x<50){
        cout<<"Warmish.";
        cout<<endl;
          }else if(x>5&&x<20){
            cout<<"Warm.";
            cout<<endl;
            }else if(x<=5&&x>1){
              cout<<"Hot!";
              cout<<endl;
                }else if(guess==number){
                cout<<"You win!";
                }
}





}
